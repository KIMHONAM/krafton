<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!--<property name="LOGS" value="./logs" />-->
    <property name="spring.application.name" value="krafton" />
    <appender name="Console"
              class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <!--
                %d{ISO8601} : 날짜
                %-5level : 로그 레벨
                %c : 카테고리
                %t : thread
                %13F:%L : Class:Code line
                %m : Message
                %n : 줄바꿈
            -->
            <!--
                %yellow(%d{ISO8601}) %blue(%-5level) %yellow([%c]) [%blue(%t)] %yellow(%13F:%L) - %m%n
                %yellow(%d{yyyy-MM-dd HH:mm:ss}) %blue(%5p) %yellow([${spring.application.name:-},%X{X-B3-TraceId:-},%X{X-B3-SpanId:-}])%blue([%c])%yellow([%13F:%L]) %msg%n
            -->
            <Pattern>
                %yellow(%d{yyyy-MM-dd HH:mm:ss}) %blue(%5p) %yellow([${spring.application.name:-},%X{X-B3-TraceId:-},%X{X-B3-SpanId:-}])  %blue([%c]) %yellow([%13F:%L]) %msg%n
            </Pattern>
        </layout>
    </appender>

    <!--<appender name="RollingFile"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOGS}/spring-boot-logger.log</file>
        <encoder
                class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>%d %p %C{1.} [%t] %m%n</Pattern>
        </encoder>

        <rollingPolicy
                class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOGS}/archived/spring-boot-logger-%d{yyyy-MM-dd}.%i.log
            </fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy
                    class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>10MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
    </appender>-->

    <!-- LOG everything at INFO level -->
    <root level="info">
        <!--<appender-ref ref="RollingFile" />-->
        <appender-ref ref="Console" />
    </root>

    <logger name="com.krafton.intra" level="trace" additivity="false">
        <!--<appender-ref ref="RollingFile" />-->
        <appender-ref ref="Console" />
    </logger>

</configuration>
